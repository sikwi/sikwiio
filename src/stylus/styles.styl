*
  padding 0px
  margin 0px
  font-family  Myriad Pro, Helvetica, sans-serif

html
  color #111

header
  background: black url(./static/background.jpg) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: #FFF
  margin 0px
  padding-top 99vh
  display block
  text-align center
  position relative

  .header
    background: black url(./static/background-blur.jpg) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    color: #FFF
    padding 10px
    text-align center
    position absolute
    left 0px
    right 0px
    bottom 0px
    height 80px
    z-index 2

    &.fix-nav
      position fixed
      top 0px

    h1
      margin-top 10px
      font-weight 100

    h2
      font-size 1em
      font-weight 100

section
  padding 20px 10px 20px
  clear: both

  .sectionContent
    margin 0 auto
    max-width 700px
    padding-bottom 20px

    h3
      font-size 1.6em
      margin-bottom 10px

    h4
      margin-bottom 10px

    figure
      img
        width 300px

    .content
      min-height 200px

    p
      text-align justify

    .details
      color #999

    li
      margin-bottom 5px
      margin-left 20px
      text-align justify

  @media screen and (min-width: 768px)
    &.right
      .content
        padding-right 310px;

      figure
        float right
        margin-left 10px

    &.left
      .content
        padding-left 310px;

      figure
        float left

  &.title
    height: 40vh
    position relative
    margin 100px auto 0

    .header
      position absolute
      left 0px
      right 0px
      bottom 0px
      top 0px
      padding-top 35vh
      color: #333
      background-color rgba(255,255,255,0.8);

      h2
        padding 0px 10px
        margin 0 auto
        max-width 700px
        line-height 60px
        font-size 2em
        text-align center

    &.electronic
      background: black url(./static/electronic.jpg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

    &.software
      background: black url(./static/software.jpg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

    &.casing
      background: black url(./static/casing.jpg) no-repeat center center fixed;
      background-position-y: 00px
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

footer
  text-align right

img
  box-shadow 0px 0px 10px rgba(0,0,0,0.2)